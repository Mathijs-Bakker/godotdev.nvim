# EditorConfig for Godot projects
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# GDScript files
[*.gd]
indent_style = space
indent_size = 4
continuation_indent_size = 4

# Godot shader files
[*.gdshader]
indent_style = space
indent_size = 4
continuation_indent_size = 4

# C# files
[*.cs]
indent_style = space
indent_size = 4
continuation_indent_size = 4
